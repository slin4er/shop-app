{{>head}}
<body>
    {{>header}}
    <h1>Магазин</h1>
    <h2>Товары</h2>
    {{#if products}}
    {{#each products}}
    <ul>
        <li>Название: {{this.name}}</li>
        <li>Цена: {{this.price}}</li>
        <li><a href="/product/view/{{this._id}}">Подробнее</a></li>
        <li><a href="/cart/add/{{this._id}}">В корзину</a></li>
    </ul>
    {{/each}}
    {{/if}}
    {{>footer}}
</body>
</html>